---
export interface Props {
  href?: string;
  target?: string;
  disabled?: boolean;
}

const { 
  href = '#',
  target = '_self',
  disabled = false
} = Astro.props;
---

<a 
  href={href} 
  target={target}
  class={`btn btn-secondary ${disabled ? 'disabled' : ''}`}
  aria-disabled={disabled}
>
  <slot />
</a>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 500;
    text-decoration: none;
    border-radius: 6px;
    transition: all 0.15s ease;
    cursor: pointer;
    border: 1px solid;
    position: relative;
    overflow: hidden;
  }

  .btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
  }

  .btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .btn-secondary {
    gap: 4px;
    background-color: rgba(0, 0, 0, 0.05);
    color: var(--color-black);
    border-color: rgba(0, 0, 0, 0.1);
    padding: 8px 16px;
    font-size: 14px;
    font-weight: 400;
    min-width: 100px;
  }

  .btn-secondary:hover {
    background-color: rgba(0, 0, 0, 0.1);
    color: var(--color-black);
    text-decoration: none;
    transform: translateY(-0.5px);
  }

  .btn-secondary:active {
    transform: translateY(0);
  }
</style>
