---
export interface Props {
  href?: string;
  target?: string;
  disabled?: boolean;
}

const { 
  href = '#',
  target = '_self',
  disabled = false
} = Astro.props;
---

<a 
  href={href} 
  target={target}
  class={`btn btn-primary-dark ${disabled ? 'disabled' : ''}`}
  aria-disabled={disabled}
>
  <slot />
</a>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 500;
    text-decoration: none;
    border-radius: 0px;
    transition: all 0.3s ease;
    cursor: pointer;
    border: 1px solid var(--color-white);
    position: relative;
    overflow: hidden;
  }

  .btn:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
  }

  .btn.disabled {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  .btn-primary-dark {
    gap: 6px;
    background-color: var(--color-white);
    color: var(--color-black);
    padding: 10px 20px;
    font-size: 14px;
    font-weight: 500;
    min-width: 120px;
    line-height: 1.2;
  }

  .btn-primary-dark:hover {
    background-color: rgba(255, 255, 255, 0.9);
    color: var(--color-black);
    text-decoration: none;
    transform: translateY(-1px);
  }

  .btn-primary-dark:active {
    transform: translateY(0);
  }
</style>
