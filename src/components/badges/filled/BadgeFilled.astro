---
export interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  size?: 'small' | 'medium' | 'large';
}

const { 
  variant = 'primary', 
  size = 'medium'
} = Astro.props;

const variantClasses = {
  primary: 'badge-filled-primary',
  secondary: 'badge-filled-secondary', 
  success: 'badge-filled-success',
  warning: 'badge-filled-warning',
  error: 'badge-filled-error',
  info: 'badge-filled-info'
};

const sizeClasses = {
  small: 'badge-size-small',
  medium: 'badge-size-medium',
  large: 'badge-size-large'
};
---

<span class={`badge badge-filled ${variantClasses[variant]} ${sizeClasses[size]}`}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.2s ease;
    cursor: default;
    user-select: none;
  }

  /* Sizes */
  .badge-size-small {
    padding: 4px 8px;
    font-size: 12px;
    line-height: 1.2;
  }

  .badge-size-medium {
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.3;
  }

  .badge-size-large {
    padding: 8px 16px;
    font-size: 16px;
    line-height: 1.4;
  }

  /* Filled variants */
  .badge-filled-primary {
    background: var(--color-black);
    color: var(--color-white);
  }

  .badge-filled-secondary {
    background: #6b7280;
    color: var(--color-white);
  }

  .badge-filled-success {
    background: #10b981;
    color: var(--color-white);
  }

  .badge-filled-warning {
    background: #f59e0b;
    color: var(--color-white);
  }

  .badge-filled-error {
    background: #ef4444;
    color: var(--color-white);
  }

  .badge-filled-info {
    background: #3b82f6;
    color: var(--color-white);
  }

  /* Hover effects */
  .badge-filled-primary:hover {
    background: #1a1a1a;
  }

  .badge-filled-secondary:hover {
    background: #4b5563;
  }

  .badge-filled-success:hover {
    background: #059669;
  }

  .badge-filled-warning:hover {
    background: #d97706;
  }

  .badge-filled-error:hover {
    background: var(--color-black);
  }

  .badge-filled-info:hover {
    background: #2563eb;
  }

  /* Dark theme variants */
  [data-theme="dark"] .badge-filled-primary {
    background: #ffffff;
    color: #000000;
  }

  [data-theme="dark"] .badge-filled-primary:hover {
    background: #f3f4f6;
  }

  [data-theme="dark"] .badge-filled-secondary {
    background: #d1d5db;
    color: #000000;
  }

  [data-theme="dark"] .badge-filled-secondary:hover {
    background: #9ca3af;
  }

  [data-theme="dark"] .badge-filled-success {
    background: #10b981;
    color: #ffffff;
  }

  [data-theme="dark"] .badge-filled-success:hover {
    background: #059669;
  }

  [data-theme="dark"] .badge-filled-warning {
    background: #f59e0b;
    color: #ffffff;
  }

  [data-theme="dark"] .badge-filled-warning:hover {
    background: #d97706;
  }

  [data-theme="dark"] .badge-filled-error {
    background: #ef4444;
    color: #ffffff;
  }

  [data-theme="dark"] .badge-filled-error:hover {
    background: var(--color-black);
  }

  [data-theme="dark"] .badge-filled-info {
    background: #3b82f6;
    color: #ffffff;
  }

  [data-theme="dark"] .badge-filled-info:hover {
    background: #2563eb;
  }
</style>
