---
export interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  size?: 'small' | 'medium' | 'large';
}

const { 
  variant = 'primary', 
  size = 'medium'
} = Astro.props;

const variantClasses = {
  primary: 'badge-soft-primary',
  secondary: 'badge-soft-secondary', 
  success: 'badge-soft-success',
  warning: 'badge-soft-warning',
  error: 'badge-soft-error',
  info: 'badge-soft-info'
};

const sizeClasses = {
  small: 'badge-size-small',
  medium: 'badge-size-medium',
  large: 'badge-size-large'
};
---

<span class={`badge badge-soft ${variantClasses[variant]} ${sizeClasses[size]}`}>
  <slot />
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 500;
    border-radius: 6px;
    transition: all 0.2s ease;
    cursor: default;
    user-select: none;
  }

  /* Sizes */
  .badge-size-small {
    padding: 4px 8px;
    font-size: 12px;
    line-height: 1.2;
  }

  .badge-size-medium {
    padding: 6px 12px;
    font-size: 14px;
    line-height: 1.3;
  }

  .badge-size-large {
    padding: 8px 16px;
    font-size: 16px;
    line-height: 1.4;
  }

  /* Soft variants */
  .badge-soft-primary {
    background: rgba(0, 0, 0, 0.08);
    color: var(--color-black);
  }

  .badge-soft-secondary {
    background: rgba(107, 114, 128, 0.1);
    color: #6b7280;
  }

  .badge-soft-success {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .badge-soft-warning {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
  }

  .badge-soft-error {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .badge-soft-info {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  /* Hover effects */
  .badge-soft-primary:hover {
    background: rgba(0, 0, 0, 0.12);
  }

  .badge-soft-secondary:hover {
    background: rgba(107, 114, 128, 0.15);
  }

  .badge-soft-success:hover {
    background: rgba(16, 185, 129, 0.15);
  }

  .badge-soft-warning:hover {
    background: rgba(245, 158, 11, 0.15);
  }

  .badge-soft-error:hover {
    background: rgba(239, 68, 68, 0.15);
  }

  .badge-soft-info:hover {
    background: rgba(59, 130, 246, 0.15);
  }

  /* Dark theme variants */
  [data-theme="dark"] .badge-soft-primary {
    background: rgba(255, 255, 255, 0.2);
    color: #ffffff;
  }

  [data-theme="dark"] .badge-soft-primary:hover {
    background: rgba(255, 255, 255, 0.3);
  }

  [data-theme="dark"] .badge-soft-secondary {
    background: rgba(209, 213, 219, 0.2);
    color: #d1d5db;
  }

  [data-theme="dark"] .badge-soft-secondary:hover {
    background: rgba(209, 213, 219, 0.3);
  }

  [data-theme="dark"] .badge-soft-success {
    background: rgba(16, 185, 129, 0.2);
    color: #10b981;
  }

  [data-theme="dark"] .badge-soft-success:hover {
    background: rgba(16, 185, 129, 0.3);
  }

  [data-theme="dark"] .badge-soft-warning {
    background: rgba(245, 158, 11, 0.2);
    color: #f59e0b;
  }

  [data-theme="dark"] .badge-soft-warning:hover {
    background: rgba(245, 158, 11, 0.3);
  }

  [data-theme="dark"] .badge-soft-error {
    background: rgba(239, 68, 68, 0.2);
    color: #ef4444;
  }

  [data-theme="dark"] .badge-soft-error:hover {
    background: rgba(239, 68, 68, 0.3);
  }

  [data-theme="dark"] .badge-soft-info {
    background: rgba(59, 130, 246, 0.2);
    color: #3b82f6;
  }

  [data-theme="dark"] .badge-soft-info:hover {
    background: rgba(59, 130, 246, 0.3);
  }
</style>
