---
import FeaturedNews from '../featured/FeaturedNews.astro';
import type { Locale } from '../../../i18n';

export interface Props {
  lang: Locale;
  currentSlug?: string;
}

const { lang, currentSlug } = Astro.props;
---

<FeaturedNews 
  lang={lang} 
  currentSlug={currentSlug} 
  title={lang === 'es' ? 'Seguir leyendo' : 
         lang === 'ca' ? 'Continuar llegint' : 
         'Continue reading'}
  hideBackground={true}
  noContainer={true}
/>

