---
import './Hero.css';
import ButtonPrimary from '../../buttons/primary/ButtonPrimary.astro';
import ButtonSecondary from '../../buttons/secondary/ButtonSecondary.astro';
import PillSoft from '../../pills/soft/PillSoft.astro';

export interface Props {
  title?: string;
  description?: string;
  showPill?: boolean;
  pillText?: string;
  buttonText?: string;
  secondButtonText?: string;
  showSecondButton?: boolean;
}

const { 
  title = "Abogacía cercana para empresas y familias",
  description = "Especialistas en Sucesiones y Mercantil. También te acompañamos en Fiscal/Contable y Laboral con un enfoque práctico y claro.",
  showPill = true,
  pillText = "JF Legal Consulting",
  buttonText = "Hablemos",
  secondButtonText = "Ver servicios",
  showSecondButton = false
} = Astro.props;
---

<section class="hero-section">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        {showPill && (
          <PillSoft variant="primary" size="md">{pillText}</PillSoft>
        )}
        <h1 class="hero-title">{title}</h1>
        <p class="hero-description">{description}</p>
        <div class="hero-cta-container">
          <ButtonPrimary href="#" width="fit-content">{buttonText}</ButtonPrimary>
          {showSecondButton && (
            <ButtonSecondary href="#">{secondButtonText}</ButtonSecondary>
          )}
        </div>
      </div>
      
      <div class="hero-image">
        <img src="/images/images/placeholder/placeholder.jpg" alt="Hero image" class="hero-img" loading="lazy" />
      </div>
    </div>
  </div>
</section>
