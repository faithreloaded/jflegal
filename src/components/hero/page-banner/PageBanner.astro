---
export interface Props {
  title: string;
  subtitle: string;
  description?: string;
  backgroundImage?: string;
}

const {
  title,
  subtitle,
  description = "",
  backgroundImage = "/images/contact.webp"
} = Astro.props;
---

<section class="page-hero">
  <div class="page-hero-bg" style={`background-image: url('${backgroundImage}')`}></div>
  <div class="container">
    <div class="page-hero-content">
      <div class="page-hero-text">
        <h1 class="page-hero-title">{title}</h1>
        <p class="page-hero-subtitle">{subtitle}</p>
        {description && <p class="page-hero-description">{description}</p>}
      </div>
    </div>
  </div>
</section>

<style>
  .page-hero {
    position: relative;
    height: 40vh;
    min-height: 300px;
    display: flex;
    align-items: center;
    overflow: hidden;
  }
  
  .page-hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .page-hero-bg::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
  }
  
  /* Asegurar que el container dentro del page-hero funcione correctamente */
  .page-hero .container {
    position: relative;
    z-index: 2;
    width: 100% !important;
    max-width: var(--max-width) !important;
    margin: 0 auto !important;
  }
  
  .page-hero-content {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    width: 100%;
    padding-top: 80px; /* Altura del header */
    min-height: calc(100% - 80px);
  }
  
  .page-hero-text {
    color: white;
  }
  
  .page-hero-title {
    font-size: 56px;
    font-weight: 400;
    line-height: 67px;
    margin: 0 0 var(--space-3) 0;
    color: white;
    opacity: 0;
    transform: translateY(12px);
    animation: fadeUp 0.45s ease-out 0.03s forwards;
  }
  
  .page-hero-subtitle {
    font-size: 18px;
    margin: 0 0 var(--space-4) 0;
    color: rgba(255, 255, 255, 0.9);
    opacity: 0;
    transform: translateY(12px);
    animation: fadeUp 0.45s ease-out 0.06s forwards;
  }
  
  .page-hero-description {
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
    color: rgba(255, 255, 255, 0.8);
    opacity: 0;
    transform: translateY(12px);
    animation: fadeUp 0.45s ease-out 0.09s forwards;
  }
  
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .page-hero {
      height: 35vh;
      min-height: 280px;
    }
    
    .page-hero-content {
      padding-top: 70px; /* Altura del header en tablet */
      min-height: calc(100% - 70px);
    }
    
    .page-hero-title {
      font-size: 48px;
      line-height: 58px;
    }
  }
  
  @media (max-width: 768px) {
    .page-hero {
      height: 40vh;
      min-height: 300px;
    }
    
    .page-hero-content {
      padding-top: 80px; /* MÃ¡s espacio del header en mobile */
      min-height: calc(100% - 80px);
    }
    
    .page-hero-title {
      font-size: 40px;
      line-height: 48px;
    }
  }
</style>
