---
import './HeroWithBackground.css';
import ButtonPrimaryDark from '../../buttons/primary-dark/ButtonPrimaryDark.astro';
import type { Locale } from '../../../i18n';

export interface Props {
  lang: Locale;
  title?: string;
  description?: string;
  buttonText?: string;
  imageSrc?: string;
  height?: number;
}

const { 
  lang,
  title = "Asesoría legal para empresas y familias",
  description = "Especialistas en sucesiones y mercantil. También te acompañamos en fiscal/contable y laboral.",
  buttonText = "Contactar",
  imageSrc = "/images/hero.webp",
  height = 500
} = Astro.props;

const prefix = `/${lang}`;
---

<section class="hero-with-background" style={`height: ${height}px; background-image: url('${imageSrc}');`}>
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-description">{description}</p>
      <div class="hero-cta">
        <ButtonPrimaryDark href={`${prefix}/contacto`} width="fit-content">{buttonText}</ButtonPrimaryDark>
      </div>
    </div>
  </div>
</section>