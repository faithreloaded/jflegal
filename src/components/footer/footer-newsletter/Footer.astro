<style>
  .footer-newsletter {
    background-color: var(--color-background);
    padding: 3rem 0 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .footer-col {
    display: flex;
    flex-direction: column;
  }

  .footer-col-newsletter {
    grid-column: span 2;
  }

  .footer-heading {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-black);
    margin: 0 0 1rem 0;
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: rgba(0, 0, 0, 0.7);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: var(--color-black);
  }

  .footer-news-desc {
    color: rgba(0, 0, 0, 0.7);
    font-size: 0.9rem;
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .newsletter-input {
    flex: 1;
    min-width: 200px;
    padding: 0.75rem;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 6px;
    font-size: 0.9rem;
    background: white;
  }

  .newsletter-input:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .newsletter-btn {
    padding: 0.75rem 1.5rem;
    white-space: nowrap;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copy {
    color: rgba(0, 0, 0, 0.6);
    font-size: 0.9rem;
    margin: 0;
  }

  .footer-credit {
    color: rgba(0, 0, 0, 0.6);
    font-size: 0.9rem;
    margin: 0;
  }

  .credit-link {
    color: var(--color-primary);
    text-decoration: none;
  }

  .credit-link:hover {
    text-decoration: underline;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    color: rgba(0, 0, 0, 0.6);
    transition: color 0.2s ease;
  }

  .social-link:hover {
    color: var(--color-primary);
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-col-newsletter {
      grid-column: span 1;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }

    .newsletter-form {
      flex-direction: column;
    }

    .newsletter-input {
      min-width: auto;
    }
  }
</style>
