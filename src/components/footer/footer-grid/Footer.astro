  }
};

// Cargar traducciones del footer usando el sistema JSON
let t: any;
try {
  t = await loadT(lang, ['footer']);
} catch (error) {
  console.error('Error loading footer translations:', error);
  // Fallback más robusto
  t = (key: string) => {
    const keys = key.split('.');
    let value = footerFallback[lang];
    for (const k of keys) {
      value = value?.[k];
    }
    return value || key;
  };
}

// Función helper para obtener traducciones de footer con fallback
function getFooterTranslation(key: string) {
  const translation = t(`footer.${key}`);
  if (translation === `footer.${key}`) {
    // Si no encuentra la traducción, usar fallback
    const keys = key.split('.');
    let value: any = (footerFallback as any)[lang];
    for (const k of keys) {
      value = value?.[k];
    }
    return value || key;
  }
  return translation;
}

const year = new Date().getFullYear();
const prefix = `/${lang}`;

// Construir datos desde las traducciones
const description = getFooterTranslation('description');
const linksTitle = getFooterTranslation('navigation.title');
const links = [
  { label: getFooterTranslation('navigation.links.home'), href: `${prefix}/` },
  { label: getFooterTranslation('navigation.links.despacho'), href: `${prefix}/despacho` },
  { label: getFooterTranslation('navigation.links.blog'), href: `${prefix}/blog` },
  { label: getFooterTranslation('navigation.links.contacto'), href: `${prefix}/contacto` },
];
const servicesTitle = getFooterTranslation('services.title');
const services = [
  { label: getFooterTranslation('services.links.fiscal'), href: `${prefix}/servicios/fiscal` },
  { label: getFooterTranslation('services.links.laboral'), href: `${prefix}/servicios/laboral` },
  { label: getFooterTranslation('services.links.mercantil'), href: `${prefix}/servicios/mercantil-societario` },
  { label: getFooterTranslation('services.links.sucesiones'), href: `${prefix}/servicios/sucesiones` },
];
const legalTitle = getFooterTranslation('legal.title');
const legalLinks = [
  { label: getFooterTranslation('legal.links.privacy'), href: `${prefix}/politica-privacidad` },
  { label: getFooterTranslation('legal.links.terms'), href: `${prefix}/terminos-condiciones` },
  { label: getFooterTranslation('legal.links.legal'), href: `${prefix}/aviso-legal` },
];
const contactTitle = getFooterTranslation('contact.title');
const contactEmail = getFooterTranslation('contact.email');
const contactPhone = getFooterTranslation('contact.phone');
const contactLocation = getFooterTranslation('contact.location');
const creditLine1 = getFooterTranslation('credits.copyright');
const creditLine2 = getFooterTranslation('credits.design');
const creditUrl = getFooterTranslation('credits.designUrl');
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <div class="footer-logo">
          <img src="/images/logo.svg" alt="Logo" class="logo-img" />
        </div>
        <p class="footer-description">{description}</p>
      </div>
      
      <div class="footer-section">
        <div class="footer-title">{linksTitle}</div>
        <ul class="footer-links">
          {links.map((l) => (
            <li><a href={l.href} class="footer-link">{l.label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-section">
        <div class="footer-title">{servicesTitle}</div>
        <ul class="footer-links">
          {services.map((s) => (
            <li><a href={s.href} class="footer-link">{s.label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-section">
        <div class="footer-title">{legalTitle}</div>
        <ul class="footer-links">
          {legalLinks.map((l) => (
            <li><a href={l.href} class="footer-link">{l.label}</a></li>
          ))}
        </ul>
      </div>
      
      <div class="footer-section">
        <div class="footer-title">{contactTitle}</div>
        <div class="contact-info">
          <div class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
              <polyline points="22,6 12,13 2,6"/>
            </svg>
            <span>{contactEmail}</span>
          </div>
          <div class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            <span>{contactPhone}</span>
          </div>
          <div class="contact-item">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span>{contactLocation}</span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="footer-credit">{creditLine1.replace('{year}', String(year))}</p>
      <p class="footer-credit">{creditLine2}<a href={creditUrl} target="_blank" rel="noopener" class="credit-link">bcnwebstudio.net</a></p>
      <div class="footer-social">
        <span class="social-link" aria-label="LinkedIn">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </span>
      </div>
    </div>
  </div>
</footer>
