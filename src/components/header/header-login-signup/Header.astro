---

<header class="header-login-signup">
  <div class="container">
    <div class="header-login-signup-content">
      <div class="logo">
        <a href="/">
          <img src="/images/logo.svg" alt="Logo" class="logo-img" />
        </a>
      </div>
      
      <nav class="nav-login-signup desktop-nav">
        <div class="nav-item-login-signup">
          <a href="/" class="nav-link-login-signup">Home</a>
        </div>
        
        <div class="nav-item-login-signup">
          <a href="/components" class="nav-link-login-signup">Components</a>
        </div>
        
        <div class="nav-item-login-signup">
          <a href="/global-styles" class="nav-link-login-signup">GlobalStyles</a>
        </div>
        
        <div class="nav-item-login-signup">
          <a href="/docs" class="nav-link-login-signup">Docs</a>
        </div>
        
        <div class="nav-item-login-signup dropdown-login-signup">
          <a href="#" class="nav-link-login-signup">
            Mega
            <svg class="dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
              <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <div class="mega-menu">
            <div class="mega-menu-content">
              <div class="mega-menu-column">
                <div class="mega-menu-item">
                  <div class="mega-menu-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M3 3v18h18V3H3zM9 9h6v6H9V9z"/>
                      <path d="M9 3v6M15 3v6M3 9h6M3 15h6"/>
                    </svg>
                  </div>
                  <div class="mega-menu-text">
                    <h4>Features</h4>
                    <p>Discover our powerful features</p>
                  </div>
                </div>
                
                <div class="mega-menu-item">
                  <div class="mega-menu-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                      <circle cx="9" cy="7" r="4"/>
                      <path d="M23 21v-2a4 4 0 0 0-3-3.87M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                  </div>
                  <div class="mega-menu-text">
                    <h4>Pricing</h4>
                    <p>Choose the perfect plan</p>
                  </div>
                </div>
              </div>
              
              <div class="mega-menu-column">
                <div class="mega-menu-item">
                  <div class="mega-menu-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                      <path d="M2 17l10 5 10-5M2 12l10 5 10-5"/>
                    </svg>
                  </div>
                  <div class="mega-menu-text">
                    <h4>Resources</h4>
                    <p>Help and documentation</p>
                  </div>
                </div>
                
                <div class="mega-menu-item">
                  <div class="mega-menu-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                    </svg>
                  </div>
                  <div class="mega-menu-text">
                    <h4>Support</h4>
                    <p>Get help when you need it</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mega-menu-actions">
              <a href="/features" class="btn-primary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="5,3 19,12 5,21 5,3"/>
                </svg>
                Explore All
              </a>
              <a href="/pricing" class="btn-secondary">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
                </svg>
                Get Started
              </a>
            </div>
          </div>
        </div>
      </nav>
      
      <div class="header-login-signup-actions">
        <a href="/login" class="btn-link desktop-nav">
          Log in
        </a>
        <a href="/signup" class="btn-primary desktop-nav">
          Sign up
        </a>
        
        <button class="menu-toggle mobile-nav" id="menu-toggle-login-signup">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
    </div>
    
    <div class="mobile-overlay" id="mobile-overlay-login-signup"></div>
    <nav class="mobile-nav-menu" id="mobile-nav-login-signup">
      <div class="mobile-nav-header">
        <img src="/images/isotipo.svg" alt="Logo" class="mobile-logo" />
        <button class="mobile-close-btn" id="mobile-close-login-signup">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>
      <div class="mobile-nav-links">
        <a href="/" class="mobile-nav-link">Home</a>
        
        <div class="mobile-nav-item">
          <a href="/about" class="mobile-nav-link mobile-nav-toggle">
            About
            <svg class="mobile-dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
              <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <div class="mobile-submenu">
            <a href="/about" class="mobile-submenu-link">Our Story</a>
            <a href="/team" class="mobile-submenu-link">Our Team</a>
            <a href="/careers" class="mobile-submenu-link">Careers</a>
          </div>
        </div>
        
        <div class="mobile-nav-item">
          <a href="/services" class="mobile-nav-link mobile-nav-toggle">
            Services
            <svg class="mobile-dropdown-icon" width="12" height="12" viewBox="0 0 12 12" fill="none">
              <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <div class="mobile-submenu">
            <a href="/web-development" class="mobile-submenu-link">Web Development</a>
            <a href="/ui-ux-design" class="mobile-submenu-link">UI/UX Design</a>
            <a href="/digital-marketing" class="mobile-submenu-link">Digital Marketing</a>
          </div>
        </div>
        
        <a href="/buttons" class="mobile-nav-link">Buttons</a>
        <a href="/blog" class="mobile-nav-link">Blog</a>
      </div>
      <div class="mobile-nav-footer">
        <a href="/login" class="btn-link">
          Log in
        </a>
        <a href="/signup" class="btn-primary">
          Sign up
        </a>
      </div>
    </nav>
  </div>
</header>

<script>
  const menuToggle = document.getElementById('menu-toggle-login-signup');
  const mobileNav = document.getElementById('mobile-nav-login-signup');
  const mobileOverlay = document.getElementById('mobile-overlay-login-signup');
  const mobileClose = document.getElementById('mobile-close-login-signup');

  function closeMenu() {
    if (mobileNav) mobileNav.classList.remove('active');
    if (mobileOverlay) mobileOverlay.classList.remove('active');
    document.body.classList.remove('menu-open');
    if (menuToggle) menuToggle.classList.remove('active');
  }

  function openMenu() {
    if (mobileNav) mobileNav.classList.add('active');
    if (mobileOverlay) mobileOverlay.classList.add('active');
    document.body.classList.add('menu-open');
    if (menuToggle) menuToggle.classList.add('active');
  }

  if (menuToggle && mobileNav && mobileOverlay && mobileClose) {
    menuToggle.addEventListener('click', () => {
      if (mobileNav.classList.contains('active')) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    mobileClose.addEventListener('click', closeMenu);
    mobileOverlay.addEventListener('click', closeMenu);

    // Close menu when clicking on links (but not on toggle links)
    const mobileLinks = mobileNav.querySelectorAll('.mobile-nav-link:not(.mobile-nav-toggle), .mobile-submenu-link, .btn-text, .btn-primary');
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMenu);
    });

    // Handle mobile submenu toggles
    const mobileToggles = mobileNav.querySelectorAll('.mobile-nav-toggle');
    mobileToggles.forEach(toggle => {
      toggle.addEventListener('click', (e) => {
        e.preventDefault();
        const navItem = toggle.parentElement;
        if (!navItem) return;
        
        const isOpen = navItem.classList.contains('open');
        
        // Close all other submenus
        mobileNav.querySelectorAll('.mobile-nav-item').forEach(item => {
          item.classList.remove('open');
        });
        
        // Toggle current submenu
        if (!isOpen) {
          navItem.classList.add('open');
        }
      });
    });
  }
</script>
