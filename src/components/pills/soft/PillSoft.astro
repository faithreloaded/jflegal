---
export interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  size?: 'xs' | 'sm' | 'md' | 'lg';
  href?: string;
  target?: string;
  disabled?: boolean;
}

const { 
  variant = 'primary',
  size = 'md',
  href,
  target = '_self',
  disabled = false
} = Astro.props;

const baseClasses = `pill pill-soft pill-${variant} pill-${size}`;
const element = href ? 'a' : 'span';
const elementProps = href ? { href, target, title: "" } : {};
---

<element 
  class={baseClasses}
  {...elementProps}
  aria-disabled={disabled}
>
  <slot />
</element>

<style>
  .pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-full);
    transition: all 0.3s ease;
    border: none;
    position: relative;
    overflow: hidden;
    white-space: nowrap;
    user-select: none;
    gap: 6px;
  }

  .pill:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
  }

  .pill[aria-disabled="true"] {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Sizes */
  .pill-xs {
    padding: 2px 8px;
    font-size: 10px;
    font-weight: 500;
  }

  .pill-sm {
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 500;
  }

  .pill-md {
    padding: 6px 16px;
    font-size: 14px;
    font-weight: 500;
  }

  .pill-lg {
    padding: 8px 20px;
    font-size: 16px;
    font-weight: 500;
  }


  /* Soft Variants */
  .pill-soft.pill-primary {
    background-color: rgba(0, 0, 0, 0.05);
    color: var(--color-black);
  }

  .pill-soft.pill-primary:hover {
    background-color: rgba(0, 0, 0, 0.1);
    transform: translateY(-1px);
  }

  .pill-soft.pill-secondary {
    background-color: rgba(102, 102, 102, 0.1);
    color: var(--color-gray);
  }

  .pill-soft.pill-secondary:hover {
    background-color: rgba(102, 102, 102, 0.15);
    transform: translateY(-1px);
  }

  .pill-soft.pill-success {
    background-color: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .pill-soft.pill-success:hover {
    background-color: rgba(16, 185, 129, 0.15);
    transform: translateY(-1px);
  }

  .pill-soft.pill-warning {
    background-color: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
  }

  .pill-soft.pill-warning:hover {
    background-color: rgba(245, 158, 11, 0.15);
    transform: translateY(-1px);
  }

  .pill-soft.pill-error {
    background-color: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .pill-soft.pill-error:hover {
    background-color: rgba(239, 68, 68, 0.15);
    transform: translateY(-1px);
  }

  .pill-soft.pill-info {
    background-color: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .pill-soft.pill-info:hover {
    background-color: rgba(59, 130, 246, 0.15);
    transform: translateY(-1px);
  }

  .pill-soft:active {
    transform: translateY(0);
  }
</style>
