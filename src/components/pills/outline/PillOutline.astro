---
export interface Props {
  variant?: 'primary' | 'secondary' | 'success' | 'warning' | 'error' | 'info';
  size?: 'xs' | 'sm' | 'md' | 'lg';
  href?: string;
  target?: string;
  disabled?: boolean;
}

const { 
  variant = 'primary',
  size = 'md',
  href,
  target = '_self',
  disabled = false
} = Astro.props;

const baseClasses = `pill pill-outline pill-${variant} pill-${size}`;
const element = href ? 'a' : 'span';
const elementProps = href ? { href, target, title: "" } : {};
---

<element 
  class={baseClasses}
  {...elementProps}
  aria-disabled={disabled}
>
  <slot />
</element>

<style>
  .pill {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--radius-full);
    transition: all 0.3s ease;
    border: 1px solid;
    position: relative;
    overflow: hidden;
    white-space: nowrap;
    background-color: transparent;
    user-select: none;
  }

  .pill:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.1);
  }

  .pill[aria-disabled="true"] {
    opacity: 0.5;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Sizes */
  .pill-xs {
    padding: 2px 8px;
    font-size: 10px;
    font-weight: 500;
    line-height: 1.2;
  }

  .pill-sm {
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 500;
    line-height: 1.2;
  }

  .pill-md {
    padding: 6px 16px;
    font-size: 14px;
    font-weight: 500;
    line-height: 1.2;
  }

  .pill-lg {
    padding: 8px 20px;
    font-size: 16px;
    font-weight: 500;
    line-height: 1.2;
  }

  /* Outline Variants */
  .pill-outline {
    color: rgba(255, 255, 255, 0.9);
    border-color: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .pill-outline:hover {
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 1);
    border-color: rgba(255, 255, 255, 0.5);
    transform: translateY(-1px);
  }

  .pill-outline:active {
    transform: translateY(0);
  }
</style>
