---
import FAB from '../components/FAB.astro';
import '../styles/globals.css';
import { getLangFromUrl, type Locale } from '../i18n';

export interface Props {
  title: string;
  description?: string;
  lang?: Locale;
  image?: string;
  type?: string;
}

const { 
  title = "Mi Sitio Web", 
  description = "Descubre nuestros servicios y conoce más sobre nosotros. Una experiencia web moderna y profesional.", 
  lang: langProp,
  image = "/images/opengraph.jpg",
  type = "website"
} = Astro.props as Props;

const lang: Locale = langProp ?? getLangFromUrl(Astro.url);

// Construir URLs dinámicas
const baseUrl = "https://www.jflegalconsulting.com";
const currentUrl = new URL(Astro.url.pathname, baseUrl).toString();
const canonicalUrl = currentUrl;
const ogImageUrl = new URL(image, baseUrl).toString();

// Configuración de idioma para metadatos
const langConfig = {
  es: {
    siteName: "J.F. Legal Consulting",
    locale: "es_ES"
  },
  ca: {
    siteName: "J.F. Legal Consulting",
    locale: "ca_ES"
  },
  en: {
    siteName: "J.F. Legal Consulting",
    locale: "en_US"
  }
};

const currentLangConfig = langConfig[lang] || langConfig.es;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="author" content="J.F. Legal Consulting" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={currentUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:site_name" content={currentLangConfig.siteName} />
    <meta property="og:locale" content={currentLangConfig.locale} />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={currentUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:image:alt" content={title} />
    
    <!-- WhatsApp specific -->
    <meta property="og:image:secure_url" content={ogImageUrl} />
    
    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/images/favicon.png?v=1" />
    <link rel="icon" type="image/jpeg" href="/images/favicon.jpg?v=1" />
    <link rel="shortcut icon" type="image/png" href="/images/favicon.png?v=1" />
    <link rel="apple-touch-icon" href="/images/favicon.png?v=1" />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200..800&display=swap" rel="stylesheet">
    
    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />
    
    <!-- Title -->
    <title>{title}</title>
  </head>
  <body>
    <div class="layout">
      <slot />
      <FAB href="#" title="WhatsApp" />
    </div>
  </body>
</html>

<style>
  .layout {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
</style>