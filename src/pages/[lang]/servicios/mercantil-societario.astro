---
import '../../../styles/main.css';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import HeaderMega from '../../../components/header/header-mega/Header.astro';
import FooterGrid from '../../../components/footer/footer-grid/Footer.astro';
import PageBanner from '../../../components/hero/page-banner/PageBanner.astro';
import { LOCALES, type Locale, loadT } from '../../../i18n';

export async function getStaticPaths() {
  return (LOCALES as readonly string[]).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = await loadT(lang, ['header', 'footer', 'services']);

// Fallback translations para servicios si el sistema no funciona
const servicesFallback = {
  es: {
    mercantil: {
      title: "Mercantil y Societario",
      subtitle: "Constitución y gestión de sociedades mercantiles",
      description: "Constitución y gestión de sociedades mercantiles"
    }
  },
  en: {
    mercantil: {
      title: "Corporate and Commercial",
      subtitle: "Company formation and commercial law management",
      description: "Company formation and commercial law management"
    }
  },
  ca: {
    mercantil: {
      title: "Mercantil i Societari",
      subtitle: "Constitució i gestió de societats mercantils",
      description: "Constitució i gestió de societats mercantils"
    }
  }
};

// Función helper para obtener traducciones de servicios con fallback
function getServicesTranslation(key: string) {
  const translation = t(`services.${key}`);
  if (translation === `services.${key}`) {
    // Si no se encuentra la traducción, usar fallback
    const keys = key.split('.');
    let fallbackValue = servicesFallback[lang];
    for (const k of keys) {
      fallbackValue = fallbackValue?.[k];
    }
    return fallbackValue || key;
  }
  return translation;
}

const title = getServicesTranslation('mercantil.title');
const subtitle = getServicesTranslation('mercantil.subtitle');
const description = getServicesTranslation('mercantil.description');
---

<BaseLayout 
  title={`${title} | JF Legal`} 
  description={subtitle}
>
  <HeaderMega lang={lang} />
  
  <main class="main">
    <!-- Page Hero -->
    <PageBanner 
      title={title} 
      subtitle={subtitle}
      backgroundImage="/images/mercantilhero.webp"
    />
  </main>
  
  <FooterGrid lang={lang} />
</BaseLayout>
