---
import '../../styles/main.css';
import BaseLayout from '../../layouts/BaseLayout.astro';
import HeaderMega from '../../components/header/header-mega/Header.astro';
import FooterGrid from '../../components/footer/footer-grid/Footer.astro';
/* limpiamos la home: quitamos secciones no usadas */
import { LOCALES, type Locale, loadT } from '../../i18n';
/* quitado HomeHero */
import FAQListCenter from '../../components/faq/list-center/FAQ.astro';
import FeaturedNews from '../../components/blog/featured/FeaturedNews.astro';
import FeaturesSplitRight from '../../components/features/split-right/FeaturesSplitRight.astro';
import FeaturesSplitLeft from '../../components/features/split-left/FeaturesSplitLeft.astro';
import HeroOverlay from '../../components/hero/overlay/HeroOverlay.astro';
import AboutSplit from '../../components/about/split-layout/AboutSplit.astro';
import ServicesText from '../../components/services/text-layout/ServicesText.astro';
import ContactSimple from '../../components/contact/simple/ContactSimple.astro';

export async function getStaticPaths() {
  return (LOCALES as readonly string[]).map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params as { lang: Locale };
const t = await loadT(lang, ['header','footer','home','featured']);
---

<BaseLayout 
  title={`${lang === 'es' ? 'JF Legal | Asesoría jurídica integral para empresas y familias' : lang === 'ca' ? 'JF Legal | Assessorament jurídic integral per a empreses i famílies' : 'JF Legal | Comprehensive legal advice for companies and families'}`} 
  description={`${lang === 'es' ? 'Despacho de abogados especializado en derecho fiscal, laboral, mercantil y sucesiones. Ofrecemos asesoramiento jurídico integral con cercanía, claridad y confianza para empresas y familias.' : lang === 'ca' ? 'Despatx d\'advocats especialitzat en dret fiscal, laboral, mercantil i successions. Oferim assessorament jurídic integral amb proximitat, claredat i confiança per a empreses i famílies.' : 'Law firm specialized in tax, labor, commercial and inheritance law. We offer comprehensive legal advice with closeness, clarity and trust for companies and families.'}`}
>
  <HeaderMega lang={lang} />
  
      <main class="main">
        <!-- Hero Section -->
        <HeroOverlay lang={lang} />
        
        <!-- About Section -->
        <AboutSplit lang={lang} />
        
        <!-- Features Section 1 -->
        <FeaturesSplitLeft lang={lang} />
        
        <!-- Features Section 2 -->
        <FeaturesSplitRight lang={lang} />
        
        <!-- Services Text Section -->
        <ServicesText lang={lang} />
        
        <!-- Featured News -->
        <FeaturedNews lang={lang} />

        <!-- Contact Section -->
        <ContactSimple lang={lang} />

        <!-- FAQ Section -->
        <FAQListCenter
          pill={t('homeFaq.pill')}
          title={t('homeFaq.title')}
          items={[
            { question: t('homeFaq.q1.question'), answer: t('homeFaq.q1.answer') },
            { question: t('homeFaq.q2.question'), answer: t('homeFaq.q2.answer') },
            { question: t('homeFaq.q3.question'), answer: t('homeFaq.q3.answer') },
            { question: t('homeFaq.q4.question'), answer: t('homeFaq.q4.answer') }
          ]}
        />
      </main>
  
  
  <FooterGrid lang={lang} />
</BaseLayout>

