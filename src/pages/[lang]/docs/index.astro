<script>
  // Activar sección en sidebar según scroll
  function updateActiveSection() {
    const sections = document.querySelectorAll('.docs-section');
    const navLinks = document.querySelectorAll('.nav-link');
    
    let currentSection = '';
    
    // Si estamos muy arriba, activar Introduction por defecto
    if (window.scrollY < 200) {
      currentSection = 'introduction';
    } else {
      sections.forEach(section => {
        const rect = section.getBoundingClientRect();
        // Activar cuando el título esté a 200px del top (antes de que llegue)
        if (rect.top <= 200 && rect.bottom >= 200) {
          currentSection = section.id;
        }
      });
    }
    
    navLinks.forEach(link => {
      link.classList.remove('active');
      if (link.getAttribute('href') === `#${currentSection}`) {
        link.classList.add('active');
      }
    });
  }
  
  // Smooth scroll con offset para mostrar el título
  document.querySelectorAll('.nav-link').forEach((link) => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const current = e.currentTarget as HTMLAnchorElement | null;
      const href = current ? current.getAttribute('href') : null;
      if (!href) return;
      const targetId = href.substring(1);
      const targetElement = document.getElementById(targetId);

      if (targetElement) {
        const offset = 120; // Offset para mostrar el título
        const targetPosition = targetElement.offsetTop - offset;

        window.scrollTo({
          top: targetPosition,
          behavior: 'smooth'
        });
      }
    });
  });

  // Ejecutar al cargar y al hacer scroll
  window.addEventListener('load', updateActiveSection);
  window.addEventListener('scroll', updateActiveSection);
</script>

