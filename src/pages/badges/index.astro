}

.badges-showcase-preview.badges-dark-preview .badge-outlined-error:hover {
  background: #ef4444 !important;
  color: #ffffff !important;
}

.badges-showcase-preview.badges-dark-preview .badge-outlined-info {
  border-color: #3b82f6 !important;
  color: #3b82f6 !important;
}

.badges-showcase-preview.badges-dark-preview .badge-outlined-info:hover {
