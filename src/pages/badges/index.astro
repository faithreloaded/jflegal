  color: #ffffff !important;
}

.badges-showcase-preview.badges-dark-preview .badge-soft-primary {
  background: rgba(255, 255, 255, 0.2) !important;
  color: #ffffff !important;
}

.badges-showcase-preview.badges-dark-preview .badge-soft-primary:hover {
  background: rgba(255, 255, 255, 0.3) !important;
}

.badges-showcase-preview.badges-dark-preview .badge-soft-secondary {
  background: rgba(209, 213, 219, 0.2) !important;
  color: #d1d5db !important;
}

.badges-showcase-preview.badges-dark-preview .badge-soft-secondary:hover {
  background: rgba(209, 213, 219, 0.3) !important;
}

.badges-showcase-preview.badges-dark-preview .badge-soft-success {
  background: rgba(16, 185, 129, 0.2) !important;
  color: #10b981 !important;
}

.badges-showcase-preview.badges-dark-preview .badge-soft-success:hover {
