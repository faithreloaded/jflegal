.badges-showcase-preview.badges-dark-preview .badge-filled-primary {
  background: #ffffff !important;
  color: #000000 !important;
}

.badges-showcase-preview.badges-dark-preview .badge-filled-primary:hover {
  background: #f3f4f6 !important;
}

