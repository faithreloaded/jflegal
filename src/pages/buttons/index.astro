---
import '../../styles/main.css';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ButtonPrimary from '../../components/buttons/primary/ButtonPrimary.astro';
import ButtonSecondary from '../../components/buttons/secondary/ButtonSecondary.astro';
import ButtonLink from '../../components/buttons/link/ButtonLink.astro';
import ButtonPrimaryDark from '../../components/buttons/primary-dark/ButtonPrimaryDark.astro';
import ButtonSecondaryDark from '../../components/buttons/secondary-dark/ButtonSecondaryDark.astro';
import ButtonLinkDark from '../../components/buttons/link-dark/ButtonLinkDark.astro';
import ButtonLinkBlue from '../../components/buttons/link-blue/ButtonLinkBlue.astro';
import ButtonOutlinedIcon from '../../components/buttons/outlined-with-icon/ButtonOutlinedIcon.astro';
import './_buttons.css';
---

<BaseLayout 
  title="Buttons | Starter UI" 
  description="Button system design gallery"
>
  <main class="main">
    <div class="container">
      <div class="buttons-page">
        <header class="buttons-header">
          <h1 class="buttons-title">Button System</h1>
          <p class="buttons-description">
            Three button styles for all your needs
          </p>
        </header>

        <div class="buttons-showcase">
          <div class="button-group">
            <h2>Primary</h2>
            <div class="button-examples">
              <ButtonPrimary>Get started</ButtonPrimary>
              <ButtonPrimary>
                Log in
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M7 17L17 7M17 7H7M17 7V17"/>
                </svg>
              </ButtonPrimary>
            </div>
          </div>

          <div class="button-group">
            <h2>Secondary</h2>
            <div class="button-examples">
              <ButtonSecondary>Learn more</ButtonSecondary>
              <ButtonSecondary>Learn more</ButtonSecondary>
            </div>
          </div>

          <div class="button-group">
            <h2>Link</h2>
            <div class="button-examples">
              <ButtonLink>Learn more</ButtonLink>
              <div class="link-variant">
                <ButtonLinkBlue>Learn more</ButtonLinkBlue>
              </div>
            </div>
          </div>

          <div class="button-group dark-variants">
            <h2>Dark Variants</h2>
            <div class="button-examples">
              <ButtonPrimaryDark>Get started</ButtonPrimaryDark>
              <ButtonSecondaryDark>Learn more</ButtonSecondaryDark>
              <ButtonLinkDark>Learn more</ButtonLinkDark>
            </div>
          </div>

          <div class="button-group">
            <h2>Outlined with Icon</h2>
            <div class="button-examples">
              <ButtonOutlinedIcon size="medium" variant="primary" icon="arrow-right">Learn more</ButtonOutlinedIcon>
              <ButtonOutlinedIcon size="medium" variant="success" icon="check">Get started</ButtonOutlinedIcon>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
