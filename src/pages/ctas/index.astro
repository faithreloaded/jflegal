---
import '../../styles/main.css';
import BaseLayout from '../../layouts/BaseLayout.astro';
import CTA from '../../components/cta/avatars-clean/CTA.astro';
---

<BaseLayout 
  title="CTAs | Starter UI" 
  description="Call-to-action components with clean, engaging designs to drive user engagement and conversions."
>
  <main class="main">
    <div class="container">
      <div class="ctas-page">
        <header class="ctas-page-header">
          <h1 class="ctas-page-title">Call-to-Action Components</h1>
          <p class="ctas-page-description">
            Engaging CTA sections designed to drive user engagement and conversions with clean, modern styling
          </p>
        </header>

        <div class="ctas-showcase">
          <div class="ctas-showcase-item">
            <div class="ctas-showcase-header">
              <h2 class="ctas-showcase-title">Avatars with social proof</h2>
              <p class="ctas-showcase-description">CTA section with client avatars and social proof statistics</p>
            </div>
            <div class="ctas-showcase-preview">
              <CTA />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .ctas-page {
    padding: var(--space-8) 0;
  }

  .ctas-page-header {
    text-align: center;
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .ctas-page-title {
    font-size: 48px;
    font-weight: 500;
    color: var(--color-black);
    margin: 0 0 var(--space-4) 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .ctas-page-description {
    font-size: 1.125rem;
    color: rgba(0, 0, 0, 0.6);
    margin: 0;
    line-height: 1.6;
  }

  .ctas-showcase {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .ctas-showcase-item {
    margin-bottom: var(--space-8);
  }

  .ctas-showcase-header {
    margin-bottom: var(--space-6);
    text-align: left;
  }

  .ctas-showcase-title {
    font-size: 18px;
    font-weight: 500;
    color: var(--color-black);
    margin: 0 0 var(--space-2) 0;
    line-height: 1.3;
  }

  .ctas-showcase-description {
    font-size: 14px;
    color: rgba(0, 0, 0, 0.6);
    margin: 0;
    line-height: 1.4;
  }

  .ctas-showcase-preview {
    background: var(--color-preview-bg);
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    height: auto;
    position: relative;
  }

  @media (max-width: 768px) {
    .ctas-page {
      padding: var(--space-6) 0;
    }

    .ctas-page-header {
      margin-bottom: var(--space-8);
      padding: 0 var(--space-4);
    }

    .ctas-page-title {
      font-size: 36px;
    }

    .ctas-showcase {
      gap: var(--space-12);
    }

    .ctas-showcase-item {
      margin-bottom: var(--space-6);
    }

    .ctas-showcase-header {
      margin-bottom: var(--space-4);
      padding: 0 var(--space-4);
    }

    .ctas-showcase-title {
      font-size: 16px;
    }

    .ctas-showcase-description {
      font-size: 13px;
    }

    .ctas-showcase-preview {
      height: auto;
    }
  }
</style>
