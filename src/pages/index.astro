---
// Redirección automática a la versión en español
import { LOCALES } from '../i18n';

export async function getStaticPaths() {
  return [];
}

// Redirección del lado del servidor
---
<script>
  // Redirección inmediata sin mostrar contenido
  if (typeof window !== 'undefined') {
    window.location.replace('/es/');
  }
</script>

<!-- Meta tags para redirección inmediata -->
<meta http-equiv="refresh" content="0; url=/es/">
<meta name="robots" content="noindex, nofollow">

<!-- CSS para ocultar todo el contenido -->
<style>
  body {
    display: none !important;
  }
</style>

<!-- Contenido mínimo invisible -->
<div style="display: none;">
  <p>Redirigiendo...</p>
</div>
