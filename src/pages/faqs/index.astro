---
import '../../styles/main.css';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Importar todos los componentes FAQ
import FAQListCenter from '../../components/faq/list-center/FAQ.astro';
import FAQMinimalLines from '../../components/faq/minimal-lines/FAQ.astro';
import FAQSideLayout from '../../components/faq/side-layout/FAQ.astro';
---

<BaseLayout 
  title="FAQ Sections | Starter UI" 
  description="Collection of FAQ section components for modern web design"
>
  <main class="main">
    <div class="container">
      <div class="faq-page">
        <header class="faq-page-header">
          <h1 class="faq-page-title">FAQ Sections</h1>
          <p class="faq-page-description">
            A curated collection of FAQ section components designed for modern web experiences
          </p>
        </header>

        <div class="faq-showcase">
          <!-- List Center FAQ -->
          <div class="faq-showcase-item">
            <div class="faq-showcase-header">
              <h2 class="faq-showcase-title">List Center</h2>
              <p class="faq-showcase-description">FAQ items centered in a clean list layout</p>
            </div>
            <div class="faq-showcase-preview">
              <FAQListCenter />
            </div>
          </div>

          <!-- Minimal Lines FAQ -->
          <div class="faq-showcase-item">
            <div class="faq-showcase-header">
              <h2 class="faq-showcase-title">Minimal Lines</h2>
              <p class="faq-showcase-description">Clean minimal design with subtle line separators</p>
            </div>
            <div class="faq-showcase-preview">
              <FAQMinimalLines />
            </div>
          </div>

          <!-- Side Layout FAQ -->
          <div class="faq-showcase-item">
            <div class="faq-showcase-header">
              <h2 class="faq-showcase-title">Side Layout</h2>
              <p class="faq-showcase-description">FAQ content with side-by-side question and answer layout</p>
            </div>
            <div class="faq-showcase-preview">
              <FAQSideLayout />
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .faq-page {
    padding: var(--space-8) 0;
  }

  .faq-page-header {
    text-align: center;
    margin-bottom: var(--space-8);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .faq-page-title {
    font-size: 48px;
    font-weight: 500;
    color: var(--color-black);
    margin: 0 0 var(--space-4) 0;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .faq-page-description {
    font-size: 1.125rem;
    color: rgba(0, 0, 0, 0.6);
    margin: 0;
    line-height: 1.6;
  }

  .faq-showcase {
    display: flex;
    flex-direction: column;
    gap: var(--space-16);
  }

  .faq-showcase-item {
    margin-bottom: var(--space-8);
  }

  .faq-showcase-header {
    margin-bottom: var(--space-6);
    text-align: left;
  }

  .faq-showcase-title {
    font-size: 18px;
    font-weight: 500;
    color: var(--color-black);
    margin: 0 0 var(--space-2) 0;
    line-height: 1.3;
  }

  .faq-showcase-description {
    font-size: 14px;
    color: rgba(0, 0, 0, 0.6);
    margin: 0;
    line-height: 1.4;
  }

  .faq-showcase-preview {
    background: var(--color-preview-bg);
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    height: auto;
    position: relative;
  }

  /* Resetear estilos de los componentes FAQ para que se vean bien en el contenedor */
  .faq-showcase-preview :global(.faq-section),
  .faq-showcase-preview :global(.faq-list-center),
  .faq-showcase-preview :global(.faq-minimal-lines),
  .faq-showcase-preview :global(.faq-side-layout) {
    min-height: auto !important;
    height: auto !important;
    overflow: visible;
  }

  @media (max-width: 768px) {
    .faq-page {
      padding: var(--space-6) 0;
    }
    
    .faq-page-header {
      margin-bottom: var(--space-8);
      padding: 0 var(--space-4);
    }
    
    .faq-page-title {
      font-size: 36px;
    }
    
    .faq-showcase {
      gap: var(--space-12);
    }
    
    .faq-showcase-item {
      margin-bottom: var(--space-6);
    }
    
    .faq-showcase-header {
      margin-bottom: var(--space-4);
      padding: 0 var(--space-4);
    }
    
    .faq-showcase-title {
      font-size: 16px;
    }
    
    .faq-showcase-description {
      font-size: 13px;
    }
    
    .faq-showcase-preview {
      height: auto;
    }
    
    .faq-showcase-preview :global(.faq-section),
    .faq-showcase-preview :global(.faq-list-center),
    .faq-showcase-preview :global(.faq-minimal-lines),
    .faq-showcase-preview :global(.faq-side-layout) {
      min-height: auto !important;
    }
  }
</style>
